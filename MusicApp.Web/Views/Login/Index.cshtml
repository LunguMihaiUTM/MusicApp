﻿@model MusicApp.Web.Models.UserLogin
<div class="modal-dialog login_dialog">
     <!-- Modal content-->
     <div class="modal-content">
          <div class="modal-body">
               <div class="ms_register_img">
                    <img src="images/register_img.png" alt="" class="img-fluid" />
               </div>
               @using (Html.BeginForm("Index", "Login", FormMethod.Post))
               {
                    @Html.AntiForgeryToken()
          <div class="ms_register_form">
               <h2>login / Sign in</h2>
               <div class="form-group">
                    @Html.TextBoxFor(m => m.Credential, new { @class = "form-control", placeholder = "Enter Your Email", required = "required" })
                    <span class="form_icon">
                         <i class="fa_icon form-envelope" aria-hidden="true"></i>
                    </span>
                    @Html.ValidationMessageFor(m => m.Credential)
               </div>

               <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password", required = "required" })
                    <span class="form_icon" style="position: absolute; top: 10px; right: 10px;">
                         <i class="fa_icon form-lock" aria-hidden="true"></i>
                    </span>
                    @Html.ValidationMessageFor(m => m.Password)
               </div>
               <div class="form-group">
                    <button type="submit">Login</button>
               </div>
               
               <div class="remember_checkbox">
                    <label>
                         Keep me signed in
                         <input type="checkbox">
                         <span class="checkmark"></span>
                    </label>
               </div>
               <div class="popup_forgot">
                    <a href="#">Forgot Password ?</a>
               </div>
               <p>Don't Have An Account? <a href="#myModal" data-toggle="modal" class="ms_modal1 hideCurrentModel">register here</a></p>
          </div>
               }
          </div>
     </div>
</div>